{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "es2015"
        ],

        "outDir": "../build",

        "sourceMap": true,

        "alwaysStrict": true,

        "forceConsistentCasingInFileNames": true,

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,

        "strictNullChecks": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,


        "allowUnreachableCode": false
    },

    "include": [
        "./src/index.ts",
        "./src/routes/**/*.ts"
    ],

    "exclude": [
        "./src/**/__tests__/*.ts"
    ]
}
