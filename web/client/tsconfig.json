{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,

        "sourceMap": true,
        "experimentalDecorators": true,

        "strict": false,

        "forceConsistentCasingInFileNames": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "allowUnreachableCode": false,
        "skipLibCheck": true,
        "noLib": true,
        "skipDefaultLibCheck": true
    },

    "include": [
        "./src/vue-shims.d.ts", // Makes *.vue files work with TS imports

        "./src/index.ts",

        "./src/**/*.vue"
    ],

    "exclude": [
        "./src/**/__tests__/*.ts",
	    "../node_modules"
    ]
}
